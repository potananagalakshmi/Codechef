import java.util.*;

class Codechef {
    public static void main(String[] args) throws java.lang.Exception {
        // your code goes here
        Scanner sc = new Scanner(System.in);
        
        // Declare variables
        int n = sc.nextInt();
        int m = sc.nextInt();
        int x = sc.nextInt();
        int y = sc.nextInt();
        
        int a = n * x;
        int b = m * y;
        int c = a + b;
        
        System.out.println(c);
    }
}
